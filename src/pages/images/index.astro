

---
import { Image, Picture } from "astro:assets"
import Layout from "src/layouts/Layout.astro"

import post05Img from "@images/post-05.png";
---

<Layout title="Images">
    <h1 class="text-5xl">imagenes</h1>

    <img
    loading="eager"
    src="/assets/images/post-05.png" width="250" height="250">

    <Image  src={post05Img} width="250" height="250" alt="imagen del post" />
    <Image  src={post05Img}
    style={{
        width: '250px',
        height: '250px',
    }}
    width="500" height="500" alt="imagen del post" />
    
    <h1 class="mt-10">Quality low</h1>
    <Image  src={post05Img}
    quality="low"
    width="250" height="250" alt="imagen del post" />

    <h1 class="mt-10">Quality height</h1>
    <Image  src={post05Img}
    quality="height"
    width="250" height="250" alt="imagen del post" />

    <h1 class="mt-10">Formatos</h1>
    <Image  src={post05Img}
    format="jpg"
    width="250" height="250" alt="imagen del post" />

    <h1 class="mt-10">Picture</h1>
    <!-- formats={["webp", "avif", "jpg", "png", "gif"]} -->
    <!-- widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`} -->
    <!-- width={post05Img.width / 2}
    densities={[1.5, 2]} -->
    <Picture  src={post05Img}

    alt="imagen del post" />



    <div style={{
        height: '3000px',
    }}></div>


    <img 
    loading="lazy"
    src="/assets/images/post-05.png" width="250" height="250">

    
</Layout>